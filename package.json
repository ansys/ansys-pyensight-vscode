{
  "name": "pyensight",
  "publisher": "ansys",
  "displayName": "PyEnSight",
  "description": "A VS Code extension to write and debug EnSight Scripts",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onDebugAdapterProtocolTracker"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [
          "*.py"
        ]
      }
    ],
    "commands": [
      {
        "command": "pyensight.Help",
        "title": "PyEnSight: Help"
      },
      {
        "command": "pyensight.Install",
        "title": "PyEnSight: Install PyEnSight"
      },
      {
        "command": "pyensight.debug",
        "title": "PyEnSight: Launch Debug Session"
      },
      {
        "command": "pyensight.webview",
        "title": "PyEnSight: Launch WebView"
      },
      {
        "command": "pyensight.docs",
        "title": "PyEnSight: Open the PyEnSight documentation"
      },
      {
        "command": "pyensight.apidocs",
        "title": "PyEnSight: Open the EnSight Python API documentation"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pyensight.debug",
          "when": "resourceLangId == python"
        },
        {
          "command": "pyensight.webview",
          "when": "resourceLangId == python"
        }
      ],
      "editor/title/run": [
        {
          "command": "pyensight.debug",
          "when": "resourceLangId == python"
        },
        {
          "command": "pyensight.webview",
          "when": "resourceLangId == python"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/pyensight.json"
      }
    ],
    "debuggers": [
      {
        "label": "Python Debug",
        "type": "python",
        "initialConfigurations": [
          {
            "type": "python",
            "request": "launch",
            "name": "Python: Current File",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.48",
    "@types/superagent": "^4.1.18",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.63.0",
    "@vscode/debugprotocol": "^1.63.0",
    "@vscode/ripgrep": "^1.15.5",
    "@vscode/vsce": "^2.19.0",
    "axios": "^1.5.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "mocha": "^10.2.0",
    "vscode-languageclient": "^8.1.0",
    "yarn": "^1.22.19"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "extensionPack": [
    "ms-python.python"
  ]
}
